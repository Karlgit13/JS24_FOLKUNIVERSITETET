{
  "compilerOptions": {
    "target": "ES2015", // Modern JavaScript-standard
    "module": "esnext", // Använd ESModules
    "lib": ["ES2015", "DOM"], // Bibliotek för moderna funktioner och DOM
    "outDir": "./dist", // Output-mapp
    "rootDir": "./src", // Källkodsmapp
    "strict": true, // Strikt typkontroll
    "esModuleInterop": true // Underlättar modulanvändning
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
